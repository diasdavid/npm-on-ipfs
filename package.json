{
  "name": "npm-on-ipfs",
  "version": "1.0.0",
  "description": "Install your dependencies from IPFS",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "reset": "lerna run --parallel clean && rm -rf packages/*/node_modules packages/*/package-lock.json && rm -rf node_modules",
    "test": "lerna run --parallel test",
    "build": "lerna run --parallel build",
    "deploy": "lerna run --parallel deploy",
    "start": "NODE_ENV=development lerna run --parallel start",
    "clean": "lerna run --parallel clean",
    "lint": "lerna run --parallel lint"
  },
  "dependencies": {
    "lerna": "^3.1.4"
  }
}
